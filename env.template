# Vietnam Hearts Scheduler - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection URL (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///./dev.db
# Example for PostgreSQL: postgresql://user:password@localhost:5432/vietnam_hearts

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Port for the API server
PORT=8080
# Base URL for the API (used in email templates and links)
API_URL=http://localhost:8080
# Environment: development, staging, production
ENVIRONMENT=development

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email address that will send notifications (must be a Gmail account)
EMAIL_SENDER=your-email@gmail.com
# Gmail App Password (not your regular password - generate in Google Account settings)
GMAIL_APP_PASSWORD=your-gmail-app-password

# =============================================================================
# TESTING/DRY RUN CONFIGURATION
# =============================================================================
# Enable dry run mode (won't send actual emails or make changes)
DRY_RUN=false
# Email address to receive all emails in dry run mode (optional)
DRY_RUN_EMAIL_RECIPIENT=test@example.com

# =============================================================================
# GOOGLE SHEETS CONFIGURATION
# =============================================================================
# Google Sheets ID for the main schedule sheet
SCHEDULE_SHEET_ID=your-schedule-sheet-id
# Google Sheets ID for new volunteer signups
NEW_SIGNUPS_SHEET_ID=your-signups-sheet-id
# Range in schedule sheet to read (default: B7:G11)
GOOGLE_SCHEDULE_RANGE=B7:G11
# Range in signups sheet to read (default: A2:R)
GOOGLE_SIGNUPS_RANGE=A2:R
# Path to Google service account credentials JSON file
GOOGLE_APPLICATION_CREDENTIALS=./secrets/google_credentials.json

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Google OAuth Client ID (for user authentication)
GOOGLE_OAUTH_CLIENT_ID=your-oauth-client-id
# Google OAuth Client Secret
GOOGLE_OAUTH_CLIENT_SECRET=your-oauth-client-secret
# Service account email for Google Sheets access
SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com

# =============================================================================
# SCHEDULE DISPLAY CONFIGURATION
# =============================================================================
# Number of weeks to display in the schedule sheets
SCHEDULE_SHEETS_DISPLAY_WEEKS_COUNT=4

# =============================================================================
# EXTERNAL LINKS
# =============================================================================
# Link for volunteers to sign up for classes
SCHEDULE_SIGNUP_LINK=https://forms.google.com/your-signup-form
# Link for volunteers to manage email preferences
EMAIL_PREFERENCES_LINK=https://forms.google.com/your-preferences-form

# =============================================================================
# RETRY CONFIGURATION
# =============================================================================
# Maximum retries for Google Sheets API calls
GOOGLE_SHEETS_MAX_RETRIES=3
# Base wait time between retries (seconds)
GOOGLE_SHEETS_BASE_WAIT=2.0
# Maximum wait time between retries (seconds)
GOOGLE_SHEETS_MAX_WAIT=15.0

# =============================================================================
# SOCIAL MEDIA AND COMMUNICATION LINKS
# =============================================================================
# Facebook Messenger link for volunteers
FACEBOOK_MESSENGER_LINK=https://m.me/your-page
# Discord invite link for volunteers
DISCORD_INVITE_LINK=https://discord.gg/your-invite
# Onboarding guide link for new volunteers
ONBOARDING_GUIDE_LINK=https://docs.google.com/your-onboarding-guide
# Instagram profile link
INSTAGRAM_LINK=https://instagram.com/your-profile
# Facebook page link
FACEBOOK_PAGE_LINK=https://facebook.com/your-page

# =============================================================================
# NOTES
# =============================================================================
# 
# REQUIRED VARIABLES FOR PRODUCTION:
# - GMAIL_APP_PASSWORD
# - SCHEDULE_SIGNUP_LINK
# - EMAIL_PREFERENCES_LINK
# - FACEBOOK_MESSENGER_LINK
# - DISCORD_INVITE_LINK
# - ONBOARDING_GUIDE_LINK
# - INSTAGRAM_LINK
# - FACEBOOK_PAGE_LINK
# - NEW_SIGNUPS_SHEET_ID
#
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. For Gmail setup:
#    - Enable 2-factor authentication
#    - Generate an App Password in Google Account settings
#    - Use the App Password, not your regular password
# 4. For Google Sheets:
#    - Create a service account in Google Cloud Console
#    - Download the credentials JSON file to ./secrets/google_credentials.json
#    - Share your Google Sheets with the service account email
# 5. For OAuth (optional):
#    - Create OAuth 2.0 credentials in Google Cloud Console
#    - Add authorized redirect URIs for your domain 